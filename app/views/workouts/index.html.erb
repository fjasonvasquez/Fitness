<%= session[:user_id] %>
<h1>Monday day 1</h1>
<h2>Strength Training Workout I</h2>

<table>
  <thead>
    <tr>
      <th>Excercise</th>
      <th>Repetitions</th>
      <th>Sets</th>
    </tr>
  </thead>
      <td><% @workouts.each do |workout| %></td>
    <tr>
      <th><%= workout.name %></th>
      <td><%= workout.repetitions %></td>
      <td><%= workout.sets %></td>
      <td><%= button_to "delete", { action: "destroy", id: workout.id},
      {method: :delete, data:{confirm: "Are you sure?"}}%></td>
      <td><%= link_to "edit", edit_workout_path(workout) %></td>
      <br>
    </tr>
</table>
  <% end %>
